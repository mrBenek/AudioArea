        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle checkbox change event
        $('input[type="checkbox"][name="company"]').on('change', function () {
            var selectedCompanyIds = $('input[type="checkbox"][name="company"]:checked').map(function () {
                return $(this).val();
            }).get();

            $.ajax({
                url: '@Url.Action("CompanyCheckedId", "Products")',
                type: 'POST',
                dataType: 'html',
                data: {
                    companyIds: selectedCompanyIds
                },
                success: function (result) {
                    $('#category-collapse').html(result);
                },
                error: function () {
                    console.log('An error occurred while restrieving filtered category data.');
                }
            });
        });
    </script>
}